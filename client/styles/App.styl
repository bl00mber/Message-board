@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500,700')
@import 'palette.styl'

@media (max-width: 900px)
  .content-page
    flex-direction column

  .add_container
    width 100% !important
    margin 0 0 30px 0 !important

html
  height: 100%

body
  height: 100%
  font-family: Roboto, sans-serif
  font-weight: 500
  margin: 0
  color: font-gray
  background: #f7f8fa

#root
  height: 100%
  >div
    height: 100%

.header-background
  border-bottom: 1px solid #e5e5e5
  background: #ffffff

.header-container
  max-width: 1700px
  padding: 10px 50px
  margin: 0 auto
  display: flex
  justify-content: space-between
  align-items: center

.header-container
  div
    display flex

.header-logo
  font-size 44px
  font-weight 600
  color #4a4a4a
  text-decoration none !important
  padding 20px 0

.header-status
  margin-top 12px
  margin-right 20px

.header-login-button
  width 130px
  height 35px
  border-radius 5px
  background #37c2c4
  color #ffffff
  font-size 20px
  text-decoration none
  text-transform uppercase
  text-align center
  justify-content center
  padding-top 11px
  cursor pointer
  &:hover
    background btn-color-hover
  &:active
    background btn-color-active


.page-container
  max-width: 1700px
  padding 50px 50px 85px 50px
  margin 0 auto

.content-page
  display flex
