@import 'palette.styl'

.add_container
  width 450px
  margin-right 30px
  position relative

.add_top_btns_container
  display flex
  justify-content space-between

.add_format_btn
  display flex
  .add_btn
    margin-right 10px

.add_btn
  color #ffffff
  background btn-color
  border-radius 5px
  padding 7px 15px
  cursor pointer
  text-align center
  &:hover
    background btn-color-hover
  &:active
    background btn-color-active

.add_btn.create
  margin-top 10px
  padding 15px 15px
  text-transform uppercase

.add_text
  flex-grow 1
  width 100% !important
  min-height 150px
  box-sizing border-box
  margin 25px 0 !important
  padding 10px
  font-family Roboto
  font-weight 300
  font-size 16px
  color #4a4a4a
  border none
  box-shadow inset 2px -2px 10px rgba(0,0,0,0.1)
  &:focus
    outline none !important
  &::placeholder
    font-weight 500
    color #d9d9d9
  &:hover
    box-shadow inset 2px -2px 10px rgba(0,0,0,0.15)

.add_text_tooltip
  margin-top: -10px;
  color: #fff;
  background-color: #222;
  border-radius: 3px;
  font-size: 13px;
  opacity: 0;
  padding: 8px 21px;
  position: absolute;
  pointer-events: none;
  top: 25px;
  left: 160px;
  transition: opacity 0.3s ease-out;
  z-index: 1;
  &::after
    border-top-color: #222;
    border-top-style: solid;
    border-top-width: 6px;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    bottom: -6px;
    left: 50%;
    margin-left: -8px;
    content: "";
    width: 0;
    height: 0;
    position: absolute;
