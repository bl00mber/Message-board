@import 'palette.styl'

.add_container
  width 450px
  margin-right 30px

.add_top_btns_container
  display flex
  justify-content space-between

.add_format_btn
  display flex
  .add_btn
    margin-right 10px

.add_btn
  color #ffffff
  background btn-color
  border-radius 5px
  padding 7px 15px
  cursor pointer
  text-align center
  &:hover
    background btn-color-hover
  &:active
    background btn-color-active

.add_btn.create
  margin-top 30px
  padding 15px 15px
  text-transform uppercase

.add_text
  flex-grow 1
  width 100% !important
  min-height 150px
  box-sizing border-box
  margin 25px 0 !important
  padding 10px
  font-family Roboto
  font-weight 300
  font-size 16px
  color #4a4a4a
  border none
  box-shadow inset 2px -2px 10px rgba(0,0,0,0.1)
  &:focus
    outline none !important
  &::placeholder
    font-weight 500
    color #d9d9d9
  &:hover
    box-shadow inset 2px -2px 10px rgba(0,0,0,0.15)

.add_drag-n-drop
  padding-top 25px
  border 1px solid #ececec
  color #afafaf
  height 45px
  text-align center

.add_img
  display none
